{
  "manifest_version": 3,
  "name": "Wix micro fix",
  "version": "3.3.0",
  "description": "Chrome extension fixing little bugs on WIX editor",
  "author": "alexanderz@wix.com",
  "homepage_url": "https://github.com/shoonia/wix-micro-fix.git",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://*.wix.com/*",
    "https://wix.wixanswers.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.wix.com/*",
        "https://wix.wixanswers.com/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "https://support.wix.com/*"
      ],
      "js": [
        "brokenImage.js"
      ]
    }
  ],
  "web_accessible_resources": []
}
